{
	"name": "simple-rest-service",
	"version": "1.0.0",
	"description": "Simple REST application built using @yggdrasilts architecture.",
	"license": "MIT",
	"author": "David Lopez",
	"scripts": {
		"clean": "gulp clean",
		"clean:all": "gulp clean:all",
		"compile": "gulp build",
		"compile:test": "gulp build:test",
		"start": "gulp start",
		"test": "gulp compile:test && nyc --require ts-node/register mocha --exit --recursive \"src/**/*.spec.ts\""
	},
	"dependencies": {
		"@yggdrasilts/core": "canary",
		"@yggdrasilts/mvc": "canary"
	},
	"devDependencies": {
		"@yggdrasilts/devs": "canary",
		"@yggdrasilts/testing": "canary"
	},
	"nyc": {
		"include": [
			"src/**/*.ts"
		],
		"extension": [
			".ts"
		],
		"exclude": [
			"**/index.ts",
			"**/*.spec.ts",
			"**/*.d.ts"
		],
		"reporter": [
			"text-summary",
			"html"
		],
		"all": true
	}
}